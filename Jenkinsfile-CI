pipeline {
    agent any

    environment {
        IMAGE_NAME = 'asif1993/second_ml'
    }

    stages {
        
        stage('Checkout') {
            steps { git branch: 'main', credentialsId: 'git-cred', url: 'https://github.com/AsifShaikh93/first_ml.git' }
        }

        stage('Build & Push Docker Image') {
            steps {
                script {
                    def shortCommit = sh(script: "git rev-parse --short HEAD",returnStdout: true).trim()
                    env.IMAGE_TAG = shortCommit
                }

                withCredentials([usernamePassword(credentialsId: 'docker_cred', usernameVariable: 'user', passwordVariable: 'pass')]) {
                    sh """
                      echo "$pass" | docker login -u "$user" --password-stdin

                      docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .
                      docker push ${IMAGE_NAME}:${IMAGE_TAG}

                      docker logout
                    """
                }
            }
        }

        stage('Trigger CD Pipeline') {
            steps {
                build job: 'Jenkinsfile-CD', 
                      wait: true, 
                      parameters: [
                          [$class: 'StringParameterValue', name: 'IMAGE_TAG', value: env.IMAGE_TAG]
                      ]
            }
        }
    }
}

