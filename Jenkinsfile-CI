pipeline {
     agent {
    kubernetes {
   label 'jenkins-agent'
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: kaniko
    image: gcr.io/kaniko-project/executor:debug
    command:
    - sleep
    - infinity
    volumeMounts:
    - name: docker-config
      mountPath: /kaniko/.docker
  volumes:
  - name: docker-config
    secret:
      secretName: docker-config
"""
    }
  }

    environment {
        IMAGE_NAME = 'asif1993/second_ml'
    }

    stages {

        stage('Checkout') {
            steps { git branch: 'main', credentialsId: 'git-cred', url: 'https://github.com/AsifShaikh93/first_ml.git' }
        }

            stage('Build & Push Image') {
      steps {
        container('kaniko') {
          script {
            def shortCommit = sh(
              script: "git rev-parse --short HEAD",
              returnStdout: true
            ).trim()
            env.IMAGE_TAG = shortCommit
          }

          sh '''
            /kaniko/executor \
              --context $WORKSPACE \
              --dockerfile Dockerfile \
              --destination ${IMAGE_NAME}:${IMAGE_TAG}
          '''
        }
      }
    }

        stage('Trigger CD Pipeline') {
            steps {
                build job: 'first_ml_new_CD', 
                      wait: true, 
                      parameters: [
                          [$class: 'StringParameterValue', name: 'IMAGE_TAG', value: env.IMAGE_TAG]
                      ]
            }
        }
    }
}

