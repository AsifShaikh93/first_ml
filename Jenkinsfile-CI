pipeline {

    agent {
       kubernetes {
          inheritFrom 'model-ct'
       }
    }

    environment {
        IMAGE_NAME = 'asif1993/second_ml'
    }

    stages {

        stage('Checkout') {
            steps { git branch: 'main', credentialsId: 'git-cred', url: 'https://github.com/AsifShaikh93/first_ml.git' }
        }

        stage('Build & Push Image') {
                steps {
                    script {
                        if (env.GIT_COMMIT) {
                            env.IMAGE_TAG = env.GIT_COMMIT.take(7)
                        } else {
                            env.IMAGE_TAG = sh(script: "git rev-parse --short HEAD", returnStdout: true).trim()
                        }
                    }
            
                    container('kaniko') {
                        sh """
                            /kaniko/executor \
                            --context $WORKSPACE \
                            --dockerfile Dockerfile \
                            --destination ${IMAGE_NAME}:${env.IMAGE_TAG}
                        """
                    }
                }
            }    

        stage('Trigger CD Pipeline') {
            steps {
                build job: 'first_ml_new_CD', 
                      wait: true, 
                      parameters: [
                          [$class: 'StringParameterValue', name: 'IMAGE_TAG', value: env.IMAGE_TAG]
                      ]
            }
        }
    }
}

